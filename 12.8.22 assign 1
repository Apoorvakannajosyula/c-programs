#include <stdio.h>

int main()
{
    int i,j,n;
    int ch=65;
    printf("enter n value");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%2c",ch);
            ch++;
        }
        printf("\n");
    }
    

    return 0;
}


output:enter n value5
 A
 B C
 D E F
 G H I J
 K L M N O
