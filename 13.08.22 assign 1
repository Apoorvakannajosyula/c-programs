#include <stdio.h>

int main()
{
    int i,j,n,A=65,a=97;
    
    printf("enter n value");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%c\t%c",A,a);
            A++;
			a++;
        }
        printf("\n");
    }
    

    return 0;
}

output:enter n value5
Aa
Bb      Cc
Dd      Ee      Ff
Gg      Hh      Ii      Jj
Kk      Ll      Mm      Nn      Oo
